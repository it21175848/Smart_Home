<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Track appearance when switch is ON -->
    <item android:state_checked="true">
        <shape android:shape="rectangle"> <!-- Track shape -->
            <solid android:color="#4CAF50" /> <!-- Track color for ON state -->
            <corners android:radius="40dp" /> <!-- Rounded corners -->
        </shape>
    </item>

    <!-- Track appearance when switch is OFF -->
    <item android:state_checked="false">
        <shape android:shape="rectangle">
            <solid android:color="#D3D3D3" /> <!-- Light gray color for OFF state -->
            <corners android:radius="40dp" />
        </shape>
    </item>

</selector>
