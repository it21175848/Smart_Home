<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Thumb appearance when switch is ON -->
    <item android:state_checked="true">
        <shape android:shape="oval"> <!-- Thumb shape -->
            <solid android:color="#FFFFFF" /> <!-- Dark color for ON state -->
            <size android:width="30dp" android:height="30dp" /> <!-- Thumb size -->
        </shape>
    </item>

    <!-- Thumb appearance when switch is OFF -->
    <item android:state_checked="false">
        <shape android:shape="oval">
            <solid android:color="#FFFFFF" /> <!-- White color for OFF state -->
            <size android:width="30dp" android:height="30dp" /> <!-- Thumb size -->
        </shape>
    </item>

</selector>
